{{> user-header}}
  

  <div class="container cart-container">
    <h1 class="my-4">Cart</h1>
    <div class="row">
      <div class="col-md-8">
        {{#each cart.products}}
        <div class="card cart-item">
          <div class="card-body d-flex">
            <img src="{{this.product.images.[0]}}" class="img-fluid" style="max-width: 70px; height:70px" alt="Product Image">
            <div class="ml-3">
              <h5 class="card-title">{{this.product.brand}}</h5>
              <p class="card-text">{{this.product.title}}</p>
              <p class="text-success">{{#if this.product.stock_count}}In Stock{{else}}Out of Stock{{/if}}</p>
              <div class="d-flex align-items-center">
                <button class="btn btn-outline-secondary btn-sm">-</button>
                <span class="mx-2">{{this.count}}</span>
                <button class="btn btn-outline-secondary btn-sm">+</button>
                <button class="btn btn-outline-danger btn-sm ml-3"><i class="fas fa-trash"></i></button>
              </div>
            </div>
            <div class="ml-auto">
              <p class="text-right"><strong>Sub Total: Rs.{{this.price}}</strong></p>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      <div class="col-md-4">
        <div class="order-summary">
          <h5>Order Summary</h5>
          <p>Price:</p>
          <p>Discount: $31.9</p>
          <p>Shipping: Free</p>
          <p>Coupon Applied: $0.00</p>
          <hr>
          <h5>Total:Rs.{{cart.cartTotal}}</h5>
          <p>Estimated Delivery by <strong>30 June, 2024</strong></p>
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Coupon Code">
            <button class="btn btn-outline-secondary btn-block mt-2">Apply</button>
          </div>
          <button class="btn btn-primary btn-block">Proceed to Checkout</button>
        </div>
      </div>
    </div>
  </div>

<style>
    .cart-container { padding: 20px; }
    .order-summary { background: #f8f9fa; padding: 20px; border-radius: 5px; }
    .order-summary h5 { font-weight: bold; }
    .order-summary p { margin: 0; }
    .cart-item { margin-bottom: 20px; }
  </style>
{{> footer}}
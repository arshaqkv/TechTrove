{{> user-header}}
  <style>
    .cart-container { padding: 20px; }
    .order-summary { background: #f8f9fa; padding: 20px; border-radius: 5px; }
    .order-summary h5 { font-weight: bold; }
    .order-summary p { margin: 0; }
    .cart-item { margin-bottom: 20px; }
  </style>

  <div class="container cart-container">
    <h1 class="my-4">Cart</h1>
    <div class="row">
      <div class="col-md-8">
        {{#each cartItems}}
        <div class="card cart-item">
          <div class="card-body d-flex">
            <img src="{{this.image}}" class="img-fluid" style="max-width: 150px;" alt="Product Image">
            <div class="ml-3">
              <h5 class="card-title">{{this.product}}</h5>
              <p class="card-text">{{this.description}}</p>
              <p class="text-success">{{#if this.inStock}}In Stock{{else}}Out of Stock{{/if}}</p>
              <div class="d-flex align-items-center">
                <button class="btn btn-outline-secondary btn-sm">-</button>
                <span class="mx-2">{{this.quantity}}</span>
                <button class="btn btn-outline-secondary btn-sm">+</button>
                <button class="btn btn-outline-danger btn-sm ml-3"><i class="fas fa-trash"></i></button>
              </div>
            </div>
            <div class="ml-auto">
              <p class="text-right"><strong>Sub Total: ${{this.price}}</strong></p>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      <div class="col-md-4">
        <div class="order-summary">
          <h5>Order Summary</h5>
          <p>Price: ${{calculatePrice cartItems}}</p>
          <p>Discount: $31.9</p>
          <p>Shipping: Free</p>
          <p>Coupon Applied: $0.00</p>
          <hr>
          <h5>Total: ${{calculateTotal cartItems}}</h5>
          <p>Estimated Delivery by <strong>01 Feb, 2023</strong></p>
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Coupon Code">
            <button class="btn btn-outline-secondary btn-block mt-2">Apply</button>
          </div>
          <button class="btn btn-primary btn-block">Proceed to Checkout</button>
        </div>
      </div>
    </div>
  </div>


{{> footer}}
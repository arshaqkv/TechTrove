
{{> user-header}}
    {{!-- You are in dashboard
    
    {{#if user}}
        <h1>Welcome, {{user.name}}!</h1>
        <a href="/user/logout">Logout</a>
    {{else}}
        <p>You are not logged in. Please <a href="/user/login">login</a>.</p>
    {{/if}} --}}

<div class="container mt-5">
    <div class="row">
        <!-- Sidebar for Category and Price Range -->
        <div class="col-md-3">
            <h5 class="mb-4">CATEGORY</h5>
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action active">Smartphone</a>
                <a href="#" class="list-group-item list-group-item-action">Foldable Phone</a>
                <a href="#" class="list-group-item list-group-item-action">Gaming Phone</a>
            </div>

            <h5 class="mt-4 mb-3">PRICE RANGE</h5>
            <input type="range" class="form-range" id="priceRange" min="0" max="50000" step="5000">
            <div class="d-flex justify-content-between">
                <span>₹0</span>
                <span>₹50,000</span>
            </div>
            <ul class="list-unstyled mt-3">
                <li><input type="radio" name="price" value="all" checked> All Price</li>
                <li><input type="radio" name="price" value="10000"> Under 10,000₹</li>
                <li><input type="radio" name="price" value="20000"> 10,000₹ - 20,000₹</li>
                <li><input type="radio" name="price" value="30000"> 20,000₹ - 30,000₹</li>
                <li><input type="radio" name="price" value="40000"> 30,000₹ - 40,000₹</li>
                <li><input type="radio" name="price" value="50000"> 40,000₹ - 50,000₹</li>
            </ul>
        </div>

        <!-- Product List -->
        <div class="col-md-9">
            <div class="d-flex justify-content-between mb-4">
                <div>
                    <input type="text" class="form-control" placeholder="Search...">
                </div>
                <div>
                    <select class="form-select">
                        <option value="popular">Sort By: Popular</option>
                        <option value="price-asc">Price: Low to High</option>
                        <option value="price-desc">Price: High to Low</option>
                        <option value="rating">Rating</option>
                    </select>
                </div>
            </div>

            <div class="row">
                {{#each product}}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="{{this.images.[0]}}" class="card-img-top" alt="{{this.title}}">
                        <div class="card-body">
                            <h5 class="card-title">{{this.title}}</h5>
                            <p class="card-text">
                                <span class="text-warning">{{this.rating}} ★</span>
                                <br>
                                <span class="text-muted"><s>{{this.originalPrice}}</s></span>
                                <span class="text-primary">₹{{this.price}}</span>
                            </p>
                            <a href="product/{{this.id}}" class="btn btn-primary">Buy Product</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
{{> footer}}


